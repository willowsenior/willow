.navbar.navbar-light.fixed-top.navbar-expand-lg
  .container
    a.navbar-brand(href='/home')
      img.logo(src="https://s3.amazonaws.com/willow-assets/willow_logo1.png")
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='.navbar-collapse')
      span.sr-only Toggle navigation
      span.navbar-toggler-icon
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li.nav-item(class=(title === 'Home') ? 'active' : undefined)
          a.nav-link(href='/home') Home
        li.nav-item(class=(title === 'Contact') ? 'active' : undefined)
          a.nav-link(href='/contact') Support
      ul.nav.navbar-nav.ml-auto
        if !user
          li.nav-item(class=(title === 'Login') ? 'active' : undefined)
            a.nav-link(href='/login') Login/Sign up
        else
          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined).nav-item
            a.dropdown-toggle.nav-link(href='#', data-toggle='dropdown')
              if user.picture
                img(src=user.picture)
              //else
                img(src=user.gravatar(60))
              =user.displayName || user.email
              i.caret.m-l-2
            ul.dropdown-menu
              if user._json['https://willowsenior:auth0:com/user_metadata'].isAdmin
                li.dropdown-item
                  a(href='/createseniorrecord') Add a Senior
                li.dropdown-item
                  a(href='/getseniors') View Seniors
                li.dropdown-item
                  a(href='/admincustomersignup') Create Customer Signup
                li.dropdown-item
                  a(href='/download') Export
              .divider
              li.dropdown-item
                a(href='/logout') Logout
